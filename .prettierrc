{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 120,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "parser": "php",
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}