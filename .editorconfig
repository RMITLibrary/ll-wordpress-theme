# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.php]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{scss,sass,css}]
indent_size = 2

[*.{js,json}]
indent_size = 2

[Makefile]
indent_style = tab